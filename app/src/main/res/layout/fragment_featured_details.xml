<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SubProductFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        tools:context=".fragment.SubProductFragment">
        <ScrollView
            android:layout_marginBottom="50dp"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="#10000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#FFFFFF"
                    android:layout_alignParentTop="true"
                    android:id="@+id/proimage_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/featured_pager"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">
                    </android.support.v4.view.ViewPager>
                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/featured_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:ci_drawable="@drawable/blue_radius"
                        app:ci_drawable_unselected="@drawable/black_radius"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom"
                        android:padding="10dip" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/proname_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/proimage_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <android.support.v7.widget.CardView
                        android:backgroundTint="#FFFFFF"
                        android:elevation="3dp"
                        card_view:cardCornerRadius="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="3"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:padding="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1.5"
                                    android:id="@+id/featuredname_tv"
                                    android:paddingLeft="10dp"
                                    android:text="Name"
                                    android:textSize="16sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                                <LinearLayout
                                    android:id="@+id/fea_unchecked_fav_layout"
                                    android:visibility="visible"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="0.5"
                                    android:weightSum="1"
                                    android:paddingRight="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/wishlist_iv"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_favorite_border_black_24dp"
                                        android:layout_weight="1"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/fea_checked_fav_layout"
                                    android:visibility="gone"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:paddingRight="15dp"
                                    android:layout_weight="0.5"
                                    android:weightSum="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_favorite_red_24dp"
                                        android:layout_weight="1"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp" />
                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/featuredprice_tv"
                                android:paddingLeft="5dp"
                                android:text="Price"
                                android:layout_marginBottom="5dp"
                                android:textColor=" #00cc00"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/proname_layout"
                    android:id="@+id/over_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:backgroundTint="#FFFFFF"
                        android:elevation="3dp"
                        android:padding="5dp"
                        card_view:cardCornerRadius="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:paddingLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:text="About this Item :"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <com.uncopt.android.widget.text.justify.JustifiedTextView
                                android:padding="5dp"
                                android:id="@+id/featureddesc_tv"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginBottom="5dp"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/rate_layout"
                    android:orientation="vertical"
                    android:layout_below="@+id/over_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:backgroundTint="#FFFFFF"
                        android:elevation="3dp"
                        card_view:cardCornerRadius="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:paddingLeft="10dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:text="Product Ratings :"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:backgroundTint="#FFFFFF"
                        android:elevation="3dp"
                        android:background="@drawable/tv_border"
                        card_view:cardCornerRadius="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:id="@+id/feature_product_rate"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:numStars="5"
                                android:layout_marginLeft="5dp"
                                android:stepSize="1"
                                android:rating="0"
                                android:isIndicator="true"
                                android:theme="@style/RatingBar" />
                            <Button
                                android:background="#20000000"
                                android:id="@+id/featured_ratenow_btn"
                                android:text="Rate Now"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:background="#ffffff"
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:text="Reviews :"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/featured_tv_no_review"
                            android:visibility="gone"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="No reviews yet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.RecyclerView
                            android:visibility="visible"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:clipToPadding="false"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:scrollbars="vertical"
                            android:background="#10000000"
                            android:padding="2dp"
                            android:layout_height="match_parent"
                            android:id="@+id/rv_featured_details"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
        <LinearLayout
            android:background="#10000000"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:gravity="center"
                android:id="@+id/featured_btn_addtocart"
                android:text="Add to Cart"
                android:textSize="16sp"
                android:background="#10000000"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <Button
                android:gravity="center"
                android:id="@+id/featured_btn_buynow"
                android:text="Buy Now"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>